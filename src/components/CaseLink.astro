---
// CaseLink.astro
const { title, slug, txtColor, bgColor, imgPath } = Astro.props;
---

<li
  class="case-link"
  data-bg-color={bgColor}
  data-img-path={imgPath}
  data-text-color={txtColor}
>
  <a
    href={`/projects/${slug}`}
    class=`font-medium text-4xl 2xl:text-6xl text-[${txtColor}]`
  >
    {title}
  </a>
</li>
