---
const { floorStyle, bg1, bg2 } = Astro.props;
---

<section>
  <div id="room" class="w-full h-114 bg-indigo-100 grid grid-cols-4 gap-5">
    <div
      id="room1"
      class=`${floorStyle} w-full h-full  bg-[url(./images/${bg1}.jpg)] bg-cover bg-center object-cover bg-no-repeat`
    >
    </div>
    <div
      id="room2"
      class=`${floorStyle} w-full h-full bg-[url(./images/${bg2}.jpg)] bg-cover bg-center object-cover  bg-no-repeat`
    >
    </div>
  </div>
</section>

<style>
  #room1.fullFloor {
    grid-column: span 4;
  }

  #room2.fullFloor {
    display: none;
  }

  #room1.twoRooms {
    grid-column: span 2;
  }

  #room2.twoRooms {
    grid-column: span 2;
  }

  #room1.stairsL {
    grid-column: span 1;
  }

  #room2.stairsL {
    grid-column: span 3;
  }

  #room1.stairsR {
    grid-column: span 3;
  }

  #room2.stairsR {
    grid-column: span 1;
  }
</style>
