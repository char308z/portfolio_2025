---
const { floorStyle, bg1, bg2 } = Astro.props;
---

<section>
  <div
    id="room"
    class="w-full h-full bg-indigo-100 grid lg:grid-cols-4 gap-2.5 lg:gap-5"
  >
    <div id="room1" class=`${floorStyle}  overflow-hidden`>
      <img
        src=`./images/room1.svg`
        alt=""
        class="object-cover w-full h-64 lg:h-114 xl:h-132"
      />
    </div>
    <div id="room2" class=`${floorStyle} `>
      <img
        src=`./images/room2.svg`
        alt=""
        class="object-cover w-full h-64 lg:h-114 xl:h-132"
      />
    </div>
  </div>
</section>

<style>
  #room2.fullFloor {
    display: none;
  }
  @media (width >= 1024px) {
    #room1.fullFloor {
      grid-column: span 4;
    }

    #room1.twoRooms {
      grid-column: span 2;
    }

    #room2.twoRooms {
      grid-column: span 2;
    }

    #room1.stairsL {
      grid-column: span 1;
    }

    #room2.stairsL {
      grid-column: span 3;
    }

    #room1.stairsR {
      grid-column: span 3;
    }

    #room2.stairsR {
      grid-column: span 1;
    }
  }
</style>
